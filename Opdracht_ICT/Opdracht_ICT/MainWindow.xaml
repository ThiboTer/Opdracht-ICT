<Window x:Class="Opdracht_ICT.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Opdracht_ICT"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <GroupBox Header="Selecteer com poort" Grid.Row="0">
            <StackPanel>
                <ComboBox Name="cbxComPorts" Margin="10" Width="120" HorizontalAlignment="Left"
                SelectionChanged="cbxComPorts_SelectionChanged"></ComboBox>
            </StackPanel>

        </GroupBox>

        <GroupBox Header="Display" Grid.Row="1">
            <StackPanel>
                <TextBox  TextWrapping="Wrap" Text="..." Width="120"  Height="20" Margin="5" HorizontalAlignment="Left"/>
                <Button Name="Button" Content="send" Width="50" Height="20" Margin="5" HorizontalAlignment="Left" Click="Button_Click"/>
            </StackPanel>
            

        </GroupBox>

    </Grid>
</Window>
